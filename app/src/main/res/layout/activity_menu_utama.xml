<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MenuUtama">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_wave_1" />


        <ImageView
            android:layout_width="113dp"
            android:layout_height="97dp"
            android:layout_marginLeft="147dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/academy1" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="413dp"
                android:background="#f5efef"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:shape="rectangle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="444dp"
                    android:orientation="vertical"
                    android:shape="rectangle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="     Find Your Best Teacher Private!"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Jenjang Pendidikan"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Spinner

                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:padding="5dp"
                        android:layout_margin="15dp"
                        android:spinnerMode="dialog"
                        android:entries="@array/list" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Kelas"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Spinner

                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="#FFFFFF"
                        android:padding="5dp"
                        android:entries="@array/Spinner_items2" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Mata Pelajaran"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Spinner

                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="#FFFFFF"
                        android:padding="5dp"
                        android:entries="@array/Spinner_items3" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_1"
                android:onClick="TampilkanGuru"
                android:text="Cari"
                android:textColor="#FFFF" />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        app:itemIconTint="@drawable/color_state"
        app:menu="@menu/menu_bottom" />
    </RelativeLayout>
</LinearLayout>